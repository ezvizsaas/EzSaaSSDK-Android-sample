<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="28dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btnToken"
                style="@style/ysButton4"
                android:layout_gravity="center_vertical"
                android:layout_width="100dp"
                android:text="设置token" />
            <TextView
                android:id="@+id/tvToken"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textSize="@dimen/ys_f26"
                android:textColor="@color/ys_c3"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnCapture1"
            style="@style/ysButton4"
            android:layout_width="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="28dp"
            android:text="设备添加(useOrg=true)" />
        <Button
            android:id="@+id/btnCapture2"
            style="@style/ysButton4"
            android:layout_width="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="28dp"
            android:text="设备添加(useOrg=false)" />

        <Button
            android:id="@+id/btnDevice"
            style="@style/ysButton4"
            android:layout_width="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="28dp"
            android:text="设备预览" />
        <Button
            android:id="@+id/btnPlaybackLocal"
            style="@style/ysButton4"
            android:layout_width="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="28dp"
            android:text="本地录像回放" />
        <Button
            android:id="@+id/btnPlaybackCloud"
            style="@style/ysButton4"
            android:layout_width="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="28dp"
            android:text="云录像回放" />
        <Button
            android:id="@+id/btnDeviceSets"
            style="@style/ysButton4"
            android:layout_width="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="28dp"
            android:text="设备设置" />

        <Button
            android:id="@+id/btnAlbum"
            style="@style/ysButton4"
            android:layout_width="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="28dp"
            android:text="相册" />

    </LinearLayout>
</ScrollView>
